<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#BDBDBD"
    tools:context="com.example.android.qrcommunication.generate.GenerateActivity">

    <TextView
        android:text="Generate"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="#3F51B5"
        android:textSize="20dp"/>

    <View

        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#9E9E9E" />

    <Button
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:textSize="16dp"
        android:text="Text"
        android:id="@+id/TextDecodeButton"
        android:onClick="TextDecodeButton"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:textSize="16dp"
        android:text="Image - Single"
        android:id="@+id/ImageDecodeButton2"
        android:onClick="ImageDecodeButton2"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:textSize="16dp"
        android:text="Image - Continuous"
        android:id="@+id/ImageDecodeButton"
        android:onClick="ImageDecodeButton"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#9E9E9E" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/main"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


</LinearLayout>
